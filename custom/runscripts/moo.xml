<runscript output="custom/output">
        <machine name="houat" cpu="8xE5520@2.27GHz" memory="24GB"/>

        <!-- Run template -->
        <config name="seq-generic" template="templates/seq-generic-args.sh"/>

        <!-- Systems config -->
        <!-- <system name="dispatch" version="1" measures="clasp" config="seq-generic"> -->
        <!--         <!-\- optionally allows for tagging settings -\-> -->
        <!--         <setting name="boolean-XY"  cmdline="-\-stats 1 /home/phil/dev/benchmark-tool/custom/encodings/moo/encoding-XY.lp -c horizon=50"/> -->
        <!--         <!-\- <setting name="vsids"    cmdline="-\\-stats -\\-heu=vsids 1"/> -\-> -->
        <!-- </system> -->

        <system name="dispatch" version="1" measures="clasp" config="seq-generic">
          <!-- optionally allows for tagging settings -->

          <!-- Fixed horizon runs -->
          <setting name="boolean-XY_fh"      tag="fh"  cmdline="      --stats /home/phil/dev/benchmark-tool/custom/encodings/moo/encoding-XY.lp    -c horizon=50"/>
          <setting name="csp_fh"             tag="fh"  cmdline="--csp --stats /home/phil/dev/benchmark-tool/custom/encodings/moo/encoding.clp      -c horizon=50"/>
          <setting name="dlp_fh"             tag="fh"  cmdline="      --stats /home/phil/dev/benchmark-tool/custom/encodings/moo/encoding-XY.dlp   -c horizon=50"/>

          <!-- Min horizon runs -->
          <setting name="boolean"            tag="mh"  cmdline="      --stats /home/phil/dev/benchmark-tool/custom/encodings/moo/encoding.lp       --hor m"/>
          <setting name="boolean-XY"         tag="mh"  cmdline="      --stats /home/phil/dev/benchmark-tool/custom/encodings/moo/encoding-XY.lp    --hor m"/>
          <setting name="csp"                tag="mh"  cmdline="--csp --stats /home/phil/dev/benchmark-tool/custom/encodings/moo/encoding.clp      --hor m"/>
          <setting name="dlp-s"              tag="mh"  cmdline="--dl  --strict --stats             /home/phil/dev/benchmark-tool/custom/encodings/moo/encoding-XY.dlp   --hor m"/>
          <setting name="dlp-sp"             tag="mh"  cmdline="--dl  --strict --propagate --stats /home/phil/dev/benchmark-tool/custom/encodings/moo/encoding-XY.dlp   --hor m"/>

          <!-- Min horizon runs with assignment -->
          <setting name="boolean_asg"        tag="mha" cmdline="                           --stats /home/phil/dev/benchmark-tool/custom/encodings/moo/encoding.lp /home/phil/dev/benchmark-tool/custom/encodings/control/control.lp      --hor ma --asg m"/>
          <setting name="boolean-XY_asg"     tag="Xmha" cmdline="                           --stats /home/phil/dev/benchmark-tool/custom/encodings/moo/encoding-XY.lp /home/phil/dev/benchmark-tool/custom/encodings/control/control.lp   --hor ma --asg m"/>
          <setting name="csp_asg"            tag="mha" cmdline="--csp                      --stats /home/phil/dev/benchmark-tool/custom/encodings/moo/encoding.clp  /home/phil/dev/benchmark-tool/custom/encodings/control/control.lp    --hor ma --asg m"/>
          <setting name="dlp-s_asg"          tag="Xmha" cmdline="--dl  --strict             --stats /home/phil/dev/benchmark-tool/custom/encodings/moo/encoding-XY.dlp /home/phil/dev/benchmark-tool/custom/encodings/control/control.lp  --hor ma --asg m"/>
          <setting name="dlp-sp_asg"         tag="Xmha" cmdline="--dl  --strict --propagate --stats /home/phil/dev/benchmark-tool/custom/encodings/moo/encoding-XY.dlp /home/phil/dev/benchmark-tool/custom/encodings/control/control.lp  --hor ma --asg m"/>


          <!-- Horizon computation runs -->
          <!-- ** Horizon for moo -->
          <setting name="boolean-XY_hor"     tag="hor-m"  cmdline="      --stats /home/phil/dev/benchmark-tool/custom/encodings/moo/encoding-XY.ilp -t 4"/>
          <!-- ** Horizon for moo with assignment-->
          <setting name="boolean-XY_hor_asg" tag="hor-ma" cmdline="      --stats /home/phil/dev/benchmark-tool/custom/encodings/moo/encoding-XY.ilp /home/phil/dev/benchmark-tool/custom/encodings/control/control.lp -t 4 --asg m"/>

          <!-- Assignment computation runs -->
          <setting name="assignment"         tag="asg" cmdline="--assignment --to 300"/>

        </system>

        <!-- Job parameters -->
        <seqjob name="assignment"  timeout="300"   runs="1" parallel="28"/>
        <seqjob name="horizon"     timeout="14400" runs="1" parallel="15"/>
        <seqjob name="seq-generic" timeout="1800"  runs="1" parallel="28"/>

        <!-- Benchmark sets -->
        <benchmark name="moo">
          <folder path="custom/instances/moo/structured/" glob="*.lp">
	    <!-- <ignore prefix="2x3x5"/> -->
	    <!-- <ignore prefix="4x5x8"/> -->
          </folder>
        </benchmark>

        <!-- Test run projects -->
        <!-- <project name="moo-fh" job="seq-generic"> -->
